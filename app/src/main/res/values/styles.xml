    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Common">
        <item name="themePrimary">@color/violet_dark</item>
        <item name="themePrimaryDark">@color/violet_dark</item>
        <item name="themeAccent">@color/violet_dark</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeContentTextColor">@color/black</item>
        <item name="themeContentTextColorOnPrimary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">16dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">textStart</item>
        <item name="titleTextColor">@color/white</item>
    </style>

